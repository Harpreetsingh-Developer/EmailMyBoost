# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# SMTP Configuration (Optional)
SMTP_ENCRYPTION_KEY=your_smtp_encryption_key_32_chars_minimum
SMTP_SALT_ROUNDS=10

# Server Configuration
PORT=3000
NODE_ENV=development

# Google OAuth (if using Gmail)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback
GOOGLE_REFRESH_TOKEN=your_refresh_token

# Custom SMTP Example
SMTP_HOST=smtp.domain.com
SMTP_PORT=465
SMTP_USER=hi@domain.com
SMTP_PASS=your_app_password_or_smtp_password
SMTP_SECURE=true   # true for SSL (465), false for TLS (587)
